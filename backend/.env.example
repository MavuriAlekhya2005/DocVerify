# DocVerify Backend Environment Configuration

# Server
PORT=5000
NODE_ENV=development

# MongoDB
# For local: mongodb://localhost:27017/docverify
# For Atlas: mongodb+srv://user:password@cluster.mongodb.net/docverify
MONGODB_URI=mongodb://localhost:27017/docverify

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Cloudinary (for document storage)
# Format: cloudinary://api_key:api_secret@cloud_name
CLOUDINARY_URL=cloudinary://123456789:abcdefghijk@your_cloud_name
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# OpenAI API Key (for AI field extraction)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1500

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@docverify.com

# Blockchain Configuration
# For local Hardhat development
BLOCKCHAIN_RPC_URL=http://127.0.0.1:8545
# Default Hardhat account #0 private key (ONLY for development!)
BLOCKCHAIN_PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80

# For Polygon Amoy Testnet (production)
# BLOCKCHAIN_RPC_URL=https://rpc-amoy.polygon.technology
# BLOCKCHAIN_PRIVATE_KEY=your-wallet-private-key

# Redis (for caching - optional, falls back to in-memory)
# For local: redis://localhost:6379
# For production: redis://user:password@host:port
REDIS_URL=redis://localhost:6379

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

# GitHub OAuth Configuration
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_CALLBACK_URL=http://localhost:5000/api/auth/github/callback

# Frontend URL (for CORS and OAuth redirects)
FRONTEND_URL=http://localhost:5173
# Cache Configuration
CACHE_TTL_VERIFICATION=3600  # 1 hour in seconds
CACHE_TTL_SESSION=86400      # 24 hours in seconds
CACHE_TTL_ANALYTICS=300      # 5 minutes in seconds

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000   # 1 minute
RATE_LIMIT_MAX_REQUESTS=100  # Max requests per window

# AI Configuration
AI_EXTRACTION_TIMEOUT=30000  # 30 seconds
AI_FALLBACK_ENABLED=true     # Use regex extraction if AI fails